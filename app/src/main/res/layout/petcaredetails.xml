<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="160dp"
        android:id="@+id/imageView2"/>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <!-- Here you put the rest of your current view-->



    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/rel1">

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:id="@+id/contentA"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/picsA"
            android:layout_toStartOf="@+id/picsA">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="intro Text"
                android:id="@+id/introA" />



        </TableRow>

        <RelativeLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/contentA"
            android:layout_toLeftOf="@+id/picsA">

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:id="@+id/contentB">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="intro Text"
                android:id="@+id/introB" />

        </TableRow>

            </RelativeLayout>


        <TableRow
        android:layout_width="80dp"
        android:layout_height="240dp"
            android:gravity="right"
        android:id="@+id/picsA"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true">


            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="80dp"
                android:id="@+id/imageView6" />
            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="80dp"
                android:id="@+id/imageView7" />
            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="80dp"
                android:id="@+id/imageView8" />
            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="80dp"
                android:id="@+id/imageView9" />
            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="80dp"
                android:id="@+id/imageView10" />
        </TableRow>




    </RelativeLayout>
    </ScrollView>
</LinearLayout>
